curl -o /etc/VpsPackdir/socks/s.zip https://raw.githubusercontent.com/devpow23/sc/main/files/s.zip 1> /dev/null 2> /dev/null
cd /etc/VpsPackdir/socks/
unzip -o s.zip 
rm /etc/VpsPackdir/socks/s.zip &>/dev/null
cd /root &>/dev/null
if grep vpspack /etc/ssh/sshd_config; then
   echo "vpspack found OK"
else
   cp /etc/VpsPackdir/sshconf /etc/ssh/sshd_config;
   service ssh restart
   echo "Configurado" 
fi
if [ -f /etc/banner ];
then
echo "Banner Detectado"
else
curl -o /etc/banner https://raw.githubusercontent.com/devpow23/sc/main/files/banner 1> /dev/null 2> /dev/null
fi
chmod +x /root/dropbear
}
fun_bar 'preparar'
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m Instalando Paquetes basicos\033[1;33m"
apt-get -y install nano 1> /dev/null 2> /dev/null
[[ $(dpkg --get-selections|grep -w "nano"|head -1) ]] || status=`echo -e "\033[1;33mFallo en instalacion"` &>/dev/null
[[ $(dpkg --get-selections|grep -w "nano"|head -1) ]] && status=`echo -e "\033[1;32mInstalado"` &>/dev/null
echo -e "\033[1;33m → NANO \033[1;31m  ─────────────── /// ─── $status "
apt-get -y install net-tools 1> /dev/null 2> /dev/null
[[ $(dpkg --get-selections|grep -w "net-tools"|head -1) ]] || status=`echo -e "\033[1;33mFallo en instalacion"` &>/dev/null
[[ $(dpkg --get-selections|grep -w "net-tools"|head -1) ]] && status=`echo -e "\033[1;32mInstalado"` &>/dev/null
echo -e "\033[1;33m → NET-TOOLS \033[1;31m ─────────── /// ─── $status "
