#!/bin/bash
fecha=`date`;
IP=$(curl -4 icanhazip.com)
clear && printf '\e[3J'
fun_bar () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
${comando[0]} -y > /dev/null 2>&1
${comando[1]} -y > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "  \033[1;33mESPERE \033[1;37m- \033[1;33m["
while true; do
   for((i=0; i<18; i++)); do
   echo -ne "\033[1;31mΔ"
   sleep 0.1s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "\033[1;33m]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "  \033[1;33mESPERE\033[1;37m- \033[1;33m["
done
echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"
tput cnorm
}
if [ $(id -u) != 0 ]
then
echo "Ejecute el script como root"
exit
fi
clear
echo -e "Iniciando..."
cd /root
rm /root/name &>/dev/null
mkdir /etc/VpsPackdir  2>/dev/null
mkdir /etc/VpsPackdir/v7 2>/dev/null
apt-get install curl -y 1> /dev/null 2> /dev/null
apt-get install zip -y 1> /dev/null 2> /dev/null
apt-get install python2 -y 1> /dev/null 2> /dev/null
apt-get install toilet -y 1> /dev/null 2> /dev/null
curl https://bootstrap.pypa.io/pip/2.7/get-pip.py --output /etc/VpsPackdir/get-pip.py 1> /dev/null 2> /dev/null
python2 /etc/VpsPackdir/get-pip.py 1> /dev/null 2> /dev/null
clear
echo -e "\033[1;32m "
echo -e "[\033[1;31m-\033[1;33m]\033[1;33m ───────────────────────────────────────\033[1;33m"
echo -e "\033[1;33mInstalando \033[1;32mProminex\033[0m"
echo -e "\033[1;33mIP del Servidor: \033[1;32m $IP \033[0m"
echo -e "\033[1;33mGrupo de Telegram: \033[1;32m@Pendiente\033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;33m ───────────────────────────────────────\033[1;33m"
sleep 5
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m Preparando Sistema\033[1;33m"
