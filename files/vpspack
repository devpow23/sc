#menu PRINCIPAL
clear
if [[ $1 == "" ]]
then
clear && printf '\e[3J'
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
toilet  -f future --filter border:metal [  .        PROMINEX         .  ]
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
echo -e "$TITULO【                 PROMINEX                 】\e[0m"
[\033[1;32m-\033[1;33m]   → SSH: \033[1;32m$sshports\033[1;33m→ Dropbear: \033[1;32m$dropbearports \033[1;33m
[\033[1;32m-\033[1;33m]   → SSL: \033[1;32m$sslports \033[1;33m
[\033[1;32m-\033[1;33m]   → Obfs: \033[1;32m$obfsports \033[1;33m| Rocket: \033[1;32m$shadowrports \033[1;33m| Cloak: \033[1;32m$cloakports \033[1;33m
[\033[1;32m-\033[1;33m]   → OpenVPN:\033[1;32m$openvpnports \033[1;33m
[\033[1;32m-\033[1;33m]   → V2ray:\033[1;32m$v2rayports \033[1;33m
[\033[1;32m-\033[1;33m]   → UDPWG: \033[1;91m$badvpnports \033[1;33m
[\033[1;32m-\033[1;33m]   → Apache: \033[1;91m$apacheports\033[1;33m→ Nginx: \033[1;91m$nginxports \033[1;33m
[\033[1;32m-\033[1;33m]   → Python: \033[1;91m$pythonports \033[1;33m
[\033[1;32m-\033[1;33m]   → Psiphon: \033[1;91m$psiports \033[1;33m
[\033[1;32m-\033[1;33m]   → UDP Custom: \033[1;91m$udpcustomports\033[1;33m → SlowDNS: \033[1;91m$slowdnsports\033[1;33m
[\033[1;32m-\033[1;33m]   → Hysteria: \033[1;91m$hysteriaports\033[1;33m
echo -e "${YELLOW} › ${AZ}Linux Dist:${GREEN} $distribution "
echo -e "${YELLOW} › ${AZ}IP Publica VPS:${GREEN} $ip "
echo -e "${YELLOW} › ${AZ}Hostname VPS:${GREEN} $host "
echo -e "${YELLOW} › ${AZ}M:${GREEN} $memoriatotal${AZ} MB ›Uso:${GREEN} $memoriauso${AZ} MB ›Libre:${GREEN} $memorialibre ${AZ}MB "
echo -e "${YELLOW} › ${AZ}P:${GREEN} $processor "
echo -e "${YELLOW} › ${AZ}Datos: ${GREEN}$rx_gb${AZ} GB Recibidos | ${GREEN}$tx_gb${AZ} GB Enviados "
echo -e "${GRAY}[${RED}-${GRAY}]${RED} ${GREEN}${consumohoy} ${AZ}MB Consumidos Hoy"
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
cargarmodulos
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
echo -e "${WHITE} › Usuarios En Linea:${CYAN} $_onlin ${WHITE}› Cuentas:${CYAN} $_tuser "
echo -e "${RED}[${CYAN}1${RED}]  ${RED}› ${WHITE}USUARIOS          ${RED}[${CYAN}2${RED}] ${RED} › ${WHITE}BANNER 
${RED}[${CYAN}3${RED}]  ${RED}› ${WHITE}SPEEDTEST         ${RED}[${CYAN}4${RED}] ${RED} › ${WHITE}SISTEMA
${RED}[${CYAN}5${RED}]  ${RED}› ${WHITE}FIREWALL ON       ${RED}[${CYAN}6${RED}] ${RED} › ${WHITE}FIREWALL OFF
${RED}[${CYAN}7${RED}]  ${RED}› ${WHITE}PUERTOS TCP/IP    ${RED}[${CYAN}8${RED}] ${RED} › ${WHITE}HERRAMIENTAS
${RED}[${CYAN}9${RED}]  ${RED}› ${WHITE}INSTALADORES      ${RED}[${CYAN}10${RED}] ${RED}› ${WHITE}DESINSTALADORES
${RED}[${CYAN}11${RED}] ${RED}› ${WHITE}MODIFICAR PUERTOS ${RED}[${CYAN}12${RED}] ${RED}› ${WHITE}CONFIGURACIONES  
${RED}[${CYAN}12${RED}] ${RED}› ${WHITE}CHECKUSER 
${RED}[${CYAN}100${RED}]${RED}› ${WHITE}DESINSTALAR      ${RED}[${CYAN}0${RED}] ${RED}› ${WHITE}SALIR
${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ──────────────────"
echo -e "${AZ}      Δ ESCRIBA UNA OPCION:      ${WHITE}"
read -p " : " opcao
tput cuu1 >&2 && tput dl1 >&2
else
opcao=$1
fi
case $opcao in
  1 | 01 )
   gestionusuarios;;
  2 | 02)
   bannermenu;;
  3 | 03)
   speedtestmod;;
  4 | 04)
   sistemadetalhes;;
  5 | 05)
   firewallblock;;
  6 | 06)
   resetfirewall;;
  7 | 07)
   puertos;;
  8 | 08)
   herramientas;;
  9)
   instextras;;
  10)
   delpaq;;
  11)
   addport;;
   12)
   checku;;
  100)
   rm -rf /bin/speedtest.py 2>/dev/null
   rm -rf /bin/deletarusuario 2>/dev/null
   rm -rf /bin/redefinirusuario 2>/dev/null
   rm -rf /bin/limite 2>/dev/null
   rm -rf /bin/criarusuario 2>/dev/null
   rm -rf /bin/vpspack 2>/dev/null
   rm -rf /etc/VpsPackdir/ 2>/dev/null;;
  0)
  exit;;
  *)
  vpspack;;
esac
