function herramientas(){
clear
if [[ $1 == "" ]]
then
clear && printf '\e[3J'
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
toilet  -f future --filter border:metal [  .         PROMINEX         .  ]
echo -e "${GRAY}[${RED}-${GRAY}]${CYAN} ───────────────── /// ────────────────── "
echo -e "${WHITE}      【     PROMINEX     】\033[0m"
echo -e "${CYAN} ───────────────── /// ─────────────────\033[1;33m"
echo -e "${WHITE} › Linux Dist: $distribution › Version: $os_version\033[0m"
echo -e "${WHITE} › IP Publica VPS:${CYAN}$ip \033[0m"
echo -e "${WHITE} › Hostname VPS:${CYAN}$host \033[0m"
echo -e "${WHITE} › M: $memoriatotal MB ›Uso: $memoriauso MB ›Libre: $memorialibre MB\033[0m"
echo -e "${WHITE} › P:$processor\033[0m"
echo -e "${CYAN} ───────────────── /// ─────────────────\033[1;33m"
echo -e "${WHITE}       Script @ \033[1;31mHERRAMIENTAS \033[0m"
echo -e "${CYAN} ───────────────── /// ─────────────────\033[1;33m"
echo -e "${WHITE}Seleccione una opcion:    Para Salir Ctrl + C\033[1;33m
${RED}[${CYAN}1${RED}]  ${RED}› ${WHITE}  LIMPIAR CACHE \033[1;33m
${RED}[${CYAN}2${RED}]  ${RED}› ${WHITE}  MONITOR CPU \033[1;33m        
${RED}[${CYAN}3${RED}]  ${RED}› ${WHITE}  REDIRECCION SSL \033[1;33m    
${RED}[${CYAN}4${RED}]  ${RED}› ${WHITE}  AUTOLIMPIEZA\033[1;33m        
${RED}[${CYAN}5${RED}]  ${RED}› ${WHITE}  FIX PASS (vultr)\033[1;33m
${RED}[${CYAN}6${RED}]  ${RED}› ${WHITE}  MULTIPORT\033[1;33m                
${RED}[${CYAN}7${RED}]  ${RED}› ${WHITE}  HOSTNAME \033[1;33m      
${RED}[${CYAN}8${RED}]  ${RED}› ${WHITE}  TOP MEMORY\033[1;33m
${RED}[${CYAN}9${RED}]  ${RED}› ${WHITE}  PYTHON PROXY\033[1;33m        
${RED}[${CYAN}10${RED}]  ${RED}› ${WHITE} CUSTOM MENU\033[1;33m         
${RED}[${CYAN}11${RED}]  ${RED}› ${WHITE} CERT LETSENCRYPT\033[1;33m
${RED}[${CYAN}12${RED}]  ${RED}› ${WHITE} FIX SOURCES\033[1;33m         
${RED}[${CYAN}13${RED}]  ${RED}› ${WHITE} GO \033[1;33m
${RED}[${CYAN}0${RED}]  ${RED}› ${WHITE}  REGRESAR \033[1;33m"
read -p ": " opcao
else
opcao=$1
fi
case $opcao in
  1)
   cache;;
  2)
   monitorx;;
  3)
   redireccionadoresssl;;
  4)
   autolimpieza;;
   5)
   fixvultr;;
   6)
   multi;;
   7)
   hostvps;;
   8)
   topmem;;
   9)
   pythonproxy;;
   10)
   custommenu;;
   11)
   letsencrypt;;
   12)
   fixsources;;
   13)
   goinst;;
  0)
   vpspack;;
   esac
}
function checkuserx(){
echo -e "A continuacion se ingresara al sistema de CHECKUSER"
echo -e "Continuar?"
while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
read -p "[S/N]: " yesno
tput cuu1 && tput dl1
done
if [[ ${yesno} = @(s|S|y|Y) ]]; then
cd /etc/VpsPackdir
bash initcheck.sh
fi
}
function goinst(){
echo -e "A continuacion se instalara el paquete GO Lang"
echo -e "Continuar?"
while [[ ${yesno} != @(s|S|y|Y|n|N) ]]; do
read -p "[S/N]: " yesno
tput cuu1 && tput dl1
done
if [[ ${yesno} = @(s|S|y|Y) ]]; then
echo -e "Instalando..."
cd
rm -rf /usr/local/go 1> /dev/null 2> /dev/null
wget https://go.dev/dl/go1.17.6.linux-amd64.tar.gz 1> /dev/null 2> /dev/null
tar -C /usr/local -xzf go1.17.6.linux-amd64.tar.gz
if cat /root/.bashrc | grep GOROOT; then
echo -e "Ya existe un GoROOT - Skipping"
else
sed -i '$a export GOROOT=/usr/local/go' /root/.bashrc
sed -i '$a export GOPATH=$HOME/go' /root/.bashrc
sed -i '$a export PATH=$GOPATH/bin:$GOROOT/bin:$PATH' /root/.bashrc
rm go1.16.4.linux-amd64.tar.gz
source /root/.bashrc
fi
sleep 5
echo -e "Reiniciando Fuente de Terminal..."
fi
echo -e "\033[1;33m Para finalizar el proceso de Instalacion de GO escribe :\033[0m"
echo -e "\033[1;32m source ~/.profile\033[0m"
echo -e "\033[1;31mPRESIONE ENTER PARA CONTINUAR\033[0m"
read -p " "
exit 0
}
function fixsources19(){
echo -e "Reinstalando fuentes (sources)"
curl -o /etc/apt/sources.list https://raw.githubusercontent.com/powermx/sources/master/Ubuntu19.10/sources.list && apt-get update && apt-get upgrade -y
echo -e "Reinstalacion completada"
echo -e "\033[1;31mPRESIONE ENTER PARA CONTINUAR\033[0m"
read -p " "
vpspack 9
}
